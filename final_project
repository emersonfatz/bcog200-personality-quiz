        self.frame=tk.Frame(self.root,height=screen_height)
        self.interface_frame=tk.Frame(self.root, height=100)
        self.frame.grid(row=0, column=0)
        self.interface_frame.grid(row=1, column =0)
    def create_first_window(self):
       self.quit_button = tk.Button(self.interface_frame, text="Quit", command=self.root.quit, bg="pink", fg="brown", padx=25, pady=15)
       self.go_button = tk.Button(self.interface_frame, text="Go", command=self.root.go, bg="purple", fg="brown", padx=25, pady=15)
       self.go_button.pack(side="left", padx=25, pady=25)
       self.quit_button.pack(side="left", padx=25, pady=25)

    def create_second_wndow(self):
        with open(instructions, 'r', encoding='utf-8') as file:
            instructions = file.read()
            print(instructions)
    
    def go(self):
        print("go button pressed")
        
